{
  "name": "skyrun",
  "description": "A revolutionary blockchain-powered arcade game built on Hedera",
  "version": "1.0.0",
  "type": "module",
  "keywords": [
    "blockchain",
    "hedera",
    "game",
    "arcade",
    "web3",
    "react",
    "typescript",
    "smart-contracts",
    "hashpack",
    "hts"
  ],
  "author": {
    "name": "SkyRun Team",
    "email": "team@skyrun.app",
    "url": "https://skyrun.app"
  },
  "license": "MIT",
  "homepage": "https://skyrun.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/KezzyNgotho/SKYRUN.git"
  },
  "bugs": {
    "url": "https://github.com/KezzyNgotho/SKYRUN/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "type-check": "tsc --noEmit",
    "contracts:deploy:testnet": "cd hedera && npx hardhat run scripts/deploy.ts --network testnet",
    "contracts:deploy:mainnet": "cd hedera && npx hardhat run scripts/deploy.ts --network mainnet",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@hashgraph/sdk": "^2.76.0",
    "buffer": "^6.0.3",
    "ethers": "^6.15.0",
    "hashconnect": "^3.0.14",
    "lucide-react": "^0.546.0",
    "process": "^0.11.10",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "npm:rolldown-vite@7.1.14",
    "vite-plugin-node-polyfills": "^0.21.0"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.14"
  }
}
